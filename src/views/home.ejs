<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= process.env.NAME%> - Game Server Hosting</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(135deg, #f3e7ff 0%, #e7eeff 100%);
      min-height: 100vh;
    }
    .gradient-text {
      background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .plan-card:hover {
      transform: translateY(-5px);
      transition: transform 0.3s ease;
    }
  </style>
</head>
<body>
  <nav class="bg-transparent py-4">
    <div class="max-w-6xl mx-auto px-4">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-8">
          <a href="/" class="text-2xl font-bold gradient-text"><%= process.env.NAME%></a>
          <div class="hidden md:flex space-x-6">
            <a href="#features" class="text-gray-600 hover:text-gray-900">Features</a>
            <a href="#pricing" class="text-gray-600 hover:text-gray-900">Pricing</a>
          </div>
        </div>
        <div>
          <% if (user) { %>
            <a href="/dashboard" class="px-4 py-2 rounded-md bg-black text-white hover:bg-gray-800">Dashboard</a>
          <% } else { %>
            <a href="/auth/discord" class="px-4 py-2 rounded-md bg-black text-white hover:bg-gray-800">
              Login with Discord
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <main>
    <!-- Hero Section -->
    <div class="max-w-6xl mx-auto px-4 pt-20 pb-32 text-center">
      <h1 class="text-6xl font-bold mb-6 gradient-text">Welcome to <%= process.env.NAME%></h1>
      <p class="text-xl text-gray-600 mb-12">Powerful, reliable, and scalable hosting solutions</p>
      <a href="/auth/discord" class="inline-block px-8 py-3 rounded-md bg-black text-white hover:bg-gray-800 font-medium">
        Start Your Free Trial
      </a>
    </div>

    <!-- Features Section -->
    <div id="features" class="max-w-6xl mx-auto px-4 pb-20">
      <h2 class="text-4xl font-bold text-center mb-16">Our Features</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="bg-white p-8 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-4">High Performance</h3>
          <p class="text-gray-600">Lightning-fast servers optimized for speed</p>
        </div>

        <!-- Feature 2 -->
        <div class="bg-white p-8 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-4">24/7 Support</h3>
          <p class="text-gray-600">Expert assistance available round the clock</p>
        </div>

        <!-- Feature 3 -->
        <div class="bg-white p-8 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-4">Easy Scalability</h3>
          <p class="text-gray-600">Grow your resources as your needs expand</p>
        </div>
      </div>
    </div>

    <!-- Pricing Section -->
    <div id="pricing" class="max-w-6xl mx-auto px-4 pb-20">
      <h2 class="text-4xl font-bold text-center mb-6">Pricing Plans</h2>
      <p class="text-xl text-gray-600 text-center mb-16">Xeon powered CPU for high performance</p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Soldier Plan -->
        <div class="bg-white p-6 rounded-lg shadow-sm plan-card">
          <h3 class="text-2xl font-bold mb-4">Soldier</h3>
          <div class="text-3xl font-bold mb-6">₹89<span class="text-sm text-gray-600">/month</span></div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center"><i class="fas fa-memory w-6"></i> 2GB RAM</li>
            <li class="flex items-center"><i class="fas fa-microchip w-6"></i> 1 vCore (100% CPU)</li>
            <li class="flex items-center"><i class="fas fa-hdd w-6"></i> 25GB Storage</li>
          </ul>
          <a href="/auth/discord" class="block text-center py-2 px-4 bg-black text-white rounded-md hover:bg-gray-800">Get Started</a>
        </div>

        <!-- Knight Plan -->
        <div class="bg-white p-6 rounded-lg shadow-sm plan-card">
          <h3 class="text-2xl font-bold mb-4">Knight</h3>
          <div class="text-3xl font-bold mb-6">₹149<span class="text-sm text-gray-600">/month</span></div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center"><i class="fas fa-memory w-6"></i> 4GB RAM</li>
            <li class="flex items-center"><i class="fas fa-microchip w-6"></i> 2 vCores (200% CPU)</li>
            <li class="flex items-center"><i class="fas fa-hdd w-6"></i> 50GB Storage</li>
          </ul>
          <a href="/auth/discord" class="block text-center py-2 px-4 bg-black text-white rounded-md hover:bg-gray-800">Get Started</a>
        </div>

        <!-- Bishop Plan -->
        <div class="bg-white p-6 rounded-lg shadow-sm plan-card">
          <h3 class="text-2xl font-bold mb-4">Bishop</h3>
          <div class="text-3xl font-bold mb-6">₹199<span class="text-sm text-gray-600">/month</span></div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center"><i class="fas fa-memory w-6"></i> 6GB RAM</li>
            <li class="flex items-center"><i class="fas fa-microchip w-6"></i> 3 vCores (300% CPU)</li>
            <li class="flex items-center"><i class="fas fa-hdd w-6"></i> 75GB Storage</li>
          </ul>
          <a href="/auth/discord" class="block text-center py-2 px-4 bg-black text-white rounded-md hover:bg-gray-800">Get Started</a>
        </div>

        <!-- Rook Plan -->
        <div class="bg-white p-6 rounded-lg shadow-sm plan-card">
          <h3 class="text-2xl font-bold mb-4">Rook</h3>
          <div class="text-3xl font-bold mb-6">₹399<span class="text-sm text-gray-600">/month</span></div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center"><i class="fas fa-memory w-6"></i> 10GB RAM</li>
            <li class="flex items-center"><i class="fas fa-microchip w-6"></i> 4 vCores (400% CPU)</li>
            <li class="flex items-center"><i class="fas fa-hdd w-6"></i> 100GB Storage</li>
          </ul>
          <a href="/auth/discord" class="block text-center py-2 px-4 bg-black text-white rounded-md hover:bg-gray-800">Get Started</a>
        </div>
      </div>

      <!-- Premium Plans -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-8">
        <!-- Queen Plan -->
        <div class="bg-white p-6 rounded-lg shadow-sm plan-card">
          <div class="text-purple-600 font-semibold mb-2">Premium</div>
          <h3 class="text-2xl font-bold mb-4">Queen</h3>
          <div class="text-3xl font-bold mb-6">₹499<span class="text-sm text-gray-600">/month</span></div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center"><i class="fas fa-memory w-6"></i> 12GB RAM</li>
            <li class="flex items-center"><i class="fas fa-microchip w-6"></i> 4 vCores (400% CPU)</li>
            <li class="flex items-center"><i class="fas fa-hdd w-6"></i> 125GB Storage</li>
          </ul>
          <a href="/auth/discord" class="block text-center py-2 px-4 bg-black text-white rounded-md hover:bg-gray-800">Get Started</a>
        </div>

        <!-- King Plan -->
        <div class="bg-white p-6 rounded-lg shadow-sm plan-card">
          <div class="text-purple-600 font-semibold mb-2">Premium</div>
          <h3 class="text-2xl font-bold mb-4">King</h3>
          <div class="text-3xl font-bold mb-6">₹599<span class="text-sm text-gray-600">/month</span></div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center"><i class="fas fa-memory w-6"></i> 16GB RAM</li>
            <li class="flex items-center"><i class="fas fa-microchip w-6"></i> 4 vCores (400% CPU)</li>
            <li class="flex items-center"><i class="fas fa-hdd w-6"></i> 150GB Storage</li>
          </ul>
          <a href="/auth/discord" class="block text-center py-2 px-4 bg-black text-white rounded-md hover:bg-gray-800">Get Started</a>
        </div>

        <!-- GOD Plan -->
        <div class="bg-white p-6 rounded-lg shadow-sm plan-card">
          <div class="text-purple-600 font-semibold mb-2">Premium</div>
          <h3 class="text-2xl font-bold mb-4">GOD</h3>
          <div class="text-3xl font-bold mb-6">₹799<span class="text-sm text-gray-600">/month</span></div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center"><i class="fas fa-memory w-6"></i> 24GB RAM</li>
            <li class="flex items-center"><i class="fas fa-microchip w-6"></i> 6 vCores (600% CPU)</li>
            <li class="flex items-center"><i class="fas fa-hdd w-6"></i> 200GB Storage</li>
          </ul>
          <a href="/auth/discord" class="block text-center py-2 px-4 bg-black text-white rounded-md hover:bg-gray-800">Get Started</a>
        </div>
      </div>

      <!-- Custom Plan -->
      <div class="mt-16 bg-white p-8 rounded-lg shadow-sm">
        <h3 class="text-2xl font-bold mb-6 text-center">Create Your Custom Plan</h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 text-center">
          <div class="p-4">
            <i class="fas fa-memory text-2xl mb-4 text-purple-600"></i>
            <p class="font-semibold">RAM</p>
            <p class="text-gray-600">₹30/GB</p>
          </div>
          <div class="p-4">
            <i class="fas fa-microchip text-2xl mb-4 text-purple-600"></i>
            <p class="font-semibold">CPU</p>
            <p class="text-gray-600">₹50/100% CPU</p>
          </div>
          <div class="p-4">
            <i class="fas fa-hdd text-2xl mb-4 text-purple-600"></i>
            <p class="font-semibold">Storage</p>
            <p class="text-gray-600">₹5/GB</p>
          </div>
          <div class="p-4">
            <i class="fas fa-network-wired text-2xl mb-4 text-purple-600"></i>
            <p class="font-semibold">Custom IP</p>
            <p class="text-gray-600">₹10/IP</p>
          </div>
        </div>
        <div class="text-center mt-8">
          <a href="/auth/discord" class="inline-block px-8 py-3 bg-black text-white rounded-md hover:bg-gray-800">Configure Custom Plan</a>
        </div>
      </div>
    </div>
  </main>
</body>
</html>